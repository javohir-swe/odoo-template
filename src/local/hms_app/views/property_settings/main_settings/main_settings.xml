<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- EmailAddress Views -->
        <record id="email_address_tree_view" model="ir.ui.view">
            <field name="name">email.address.tree.view</field>
            <field name="model">email.address</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="email" />
                </tree>
            </field>
        </record>

        <record id="email_address_form_view" model="ir.ui.view">
            <field name="name">email.address.form.view</field>
            <field name="model">email.address</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="email" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- State Views -->
        <record id="state_tree_view" model="ir.ui.view">
            <field name="name">state.tree.view</field>
            <field name="model">state</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="region" />
                </tree>
            </field>
        </record>

        <record id="state_form_view" model="ir.ui.view">
            <field name="name">state.form.view</field>
            <field name="model">state</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="region" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- City Views -->
        <record id="city_tree_view" model="ir.ui.view">
            <field name="name">city.tree.view</field>
            <field name="model">city</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="city" />
                    <field name="region_id" />
                </tree>
            </field>
        </record>

        <record id="city_form_view" model="ir.ui.view">
            <field name="name">city.form.view</field>
            <field name="model">city</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="city" />
                            <field name="region_id" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.prop.set</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="10000" />
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app data-string="Property Settings" id="property_settings"
                        string="Property Settings" name="property_settings">
                        <block title="Name and logo" id="name_and_logo">
                            <settings atring="Name and logo">
                                <div class="content-group">
                                    <div class="mt16">
                                        <label for="type_id" string="Type"
                                            class="col-2 o_light_label" />
                                        <field name="type_id" />
                                    </div>
                                    <div class="mt16">
                                        <label for="name" string="Name"
                                            class="col-2 o_light_label" />
                                        <field name="name" />
                                    </div>
                                    <div class="mt16">
                                        <label for="name_in_english" string="Name in English"
                                            class="col-2 o_light_label" />
                                        <field name="name_in_english" />
                                    </div>
                                    <div class="mt16">
                                        <!-- <label for="company_logo" string="Logo"
                                            class="col-2 o_light_label" /> -->
                                        <!-- <field name="company_logo" widget="image"
                                            options='{"size": [120, 120],"image_preview": " photo"}'
                                            help="Your hotel logo will be displayed in a guest's booking confirmation and automated emails." /> -->
                                    </div>
                                </div>
                            </settings>
                        </block>
                        <block title="Privacy policy" id="privacy_policy_ma">
                            <settings string="Privacy policy">
                                <div class="content-group">
                                    <div class="row gap-2">
                                        <label for="privacy_policy_date"
                                            class=" col-2 o_light_label">Data
                                            retention expiry period
                                            from the check-out date</label>
                                        <field name="privacy_policy_date" class="oe_inline" />
                                    </div>
                                </div>
                                <header class="mt-4">
                                    <div
                                        class="alert alert-info" role="alert">
                                        <p
                                            class="mb-0">
                                            <i class="fa fa-info-circle"
                                                aria-hidden="true"> </i>   Accommodation properties,
                                            as operators of personal data, are obliged to store data
                                            for the period specified in the Privacy Policy. Guests
                                            personal data may not be kept longer than needed for the
                                            purposes of processing. Deleted personal data can't be
                                            restored. The starting point of data retention is
                                            considered the date of guest check-out. If there are any
                                            changes made, they are applied to all bookings. You can
                                            retain personal data for the unlimited time only if the
                                            Privacy Policy permits it. The data will be stored until
                                            you adjust the retention period or receive a guest
                                            request to delete this data permanently. </p>
                                    </div>
                                </header>
                            </settings>
                        </block>
                        <block title="Check-in and check-out" id="check-in-check-out_ms">
                            <settings string="Check-in and check-out">
                                <div class="content-group">
                                    <div class="mt16">
                                        <label for="check_in_time"
                                            class=" col-2 o_light_label">Check-in</label>
                                        <field name="check_in_time" />
                                    </div>
                                    <div class="mt16">
                                        <label for="check_out_time"
                                            class=" col-2 o_light_label">Check-out</label>
                                        <field name="check_out_time" />
                                    </div>
                                </div>
                            </settings>
                        </block>
                        <block title="Weekend days" id="weekend_days_ms">
                            <settings string="Weekend days"
                                help="The selected days will be visually highlighted in a darker colour when setting prices and restrictions in rate plans set">
                                <header style="display:flex; gap:30px">
                                    <div style="display:flex;gap:10px;">
                                        <field name="monday" class="oe_inline"
                                            nolabel="1"
                                            widget="boolean" />
                                        <label for="monday" string="Mon"
                                            class="oe_inline" />
                                    </div>
                                    <div style="display:flex;gap:10px;">
                                        <field name="tuesday" class="oe_inline"
                                            nolabel="1"
                                            widget="boolean" />
                                        <label for="tuesday" string="Tue"
                                            class="oe_inline" />
                                    </div>
                                    <div style="display:flex;gap:10px;">
                                        <field name="wednesday" class="oe_inline"
                                            nolabel="1"
                                            widget="boolean" />
                                        <label for="wednesday" string="Wed"
                                            class="oe_inline" />
                                    </div>
                                    <div style="display:flex;gap:10px;">
                                        <field name="thursday" class="oe_inline"
                                            nolabel="1"
                                            widget="boolean" />
                                        <label for="thursday" string="Thu"
                                            class="oe_inline" />
                                    </div>
                                    <div style="display:flex;gap:10px;">
                                        <field name="friday" class="oe_inline"
                                            nolabel="1"
                                            widget="boolean" />
                                        <label for="friday" string="Fri"
                                            class="oe_inline" />
                                    </div>
                                    <div style="display:flex;gap:10px;">
                                        <field name="saturday" class="oe_inline"
                                            nolabel="1"
                                            widget="boolean" />
                                        <label for="saturday" string="Sat"
                                            class="oe_inline" />
                                    </div>
                                    <div style="display:flex;gap:10px;">
                                        <field name="sunday" class="oe_inline"
                                            nolabel="1"
                                            widget="boolean" />
                                        <label for="sunday" string="Sun"
                                            class="oe_inline" />
                                    </div>
                                </header>
                            </settings>
                        </block>
                        <block title="Child age" id="child_Age_ms">
                            <settings string="Child age">
                                <div class="mt16">
                                    <label for="child_age_ids">Child age</label>
                                    <field name="child_age_ids"
                                        widget="one2many_list">
                                        <tree editable="bottom">
                                            <field name="age_from" />
                                            <field name="age_to" />
                                        </tree>
                                        <form>
                                            <group>
                                                <field name="age_from" />
                                                <field name="age_to" />
                                            </group>
                                        </form>
                                    </field>
                                </div>
                                <header>
                                    <div
                                        class="alert alert-info" role="alert">
                                        <p
                                            class="mb-0">
                                            <i class="fa fa-info-circle"
                                                aria-hidden="true"> </i>   Set child age from 0 to
                                            18 years old. Please note, the second number in the
                                            range is not included. For example, age range from 0 to
                                            5 years includes 1,2,3,4-year-old children. 5-year-old
                                            child is included in the next age range. </p>
                                    </div>
                                </header>
                            </settings>
                        </block>
                        <block title="Address" id="address_ms">
                            <settings string="Address">
                                <div class="mt16">
                                    <label for="postal_code" class="col-2 o_light_label">Postal
                                        code</label>
                                    <field name="postal_code" />
                                </div>
                                <div class="mt16">
                                    <label for="state_id" class=" col-2 o_light_label">State</label>
                                    <field name="state_id" />
                                </div>
                                <div class="mt16">
                                    <label for="district" class=" col-2 o_light_label">District</label>
                                    <field name="district" />
                                </div>
                                <div class="mt16">
                                    <label for="city_id" class=" col-2 o_light_label">City</label>
                                    <field name="city_id" domain="[('region_id', '=', state_id)]" />
                                </div>
                                <div class="mt16">
                                    <label for="street" class=" col-2 o_light_label">Street</label>
                                    <field name="street" />
                                </div>
                                <div class="mt16">
                                    <label for="house_number" class=" col-2 o_light_label">House
                                        number</label>
                                    <field name="house_number" class="oe_inline" />
                                </div>
                                <div class="mt16">
                                    <label for="littera" class=" col-2 o_light_label">Littera</label>
                                    <field name="littera" class="oe_inline" />
                                </div>
                                <div class="mt16">
                                    <label for="building" class=" col-2 o_light_label">Building</label>
                                    <field name="building" />
                                </div>
                                <div class="mt16">
                                    <label for="construction" class="col-2 o_light_label">
                                        Construction</label>
                                    <field name="construction" />
                                </div>
                                <separator />
                                <header class="mt16">
                                    <div
                                        class="alert alert-info" role="alert">
                                        <p
                                            class="mb-0">
                                            <i class="fa fa-info-circle"
                                                aria-hidden="true"> </i>   Part of a map with the
                                            location of your accommodation property will be
                                            displayed in the booking confirmation and can help a
                                            guest find the location before arriving. To map GPS
                                            coordinate of your accommodation property, specify the
                                            latitude and longitude. To do that, open the map below,
                                            find your accommodation property and click on it. The
                                            latitude and longitude will be automatically determined. </p>
                                    </div>
                                </header>
                                <div class="mt16">
                                    <label for="latitude" class="col-2 o_light_label">Latitude</label>
                                    <field name="latitude" class="oe_inline" />
                                </div>
                                <div class="mt16">
                                    <label for="longitude" class="col-2 o_light_label">Longitude</label>
                                    <field name="longitude" class="oe_inline" />
                                </div>
                                <div class="mt16">
                                    <label for="get_directions" class="col-2 o_light_label">Get
                                        Directions</label>
                                    <field name="get_directions" class="oe_inline" />
                                </div>
                            </settings>
<!--                            <div class="mt16">-->
<!--                                <label for="get_directions" class="col-2 o_light_label">Get-->
<!--                                    Directions</label>-->
<!--                                <field name="get_directions" class="oe_inline" />-->
<!--                            </div>-->
                        </block>
                        <block title="Email" id="email_ms">
                            <settings string="Email">
                                <div class="mt16">
                                    <label for="email_for_guests" class=" col-2 o_light_label">Email
                                        for guests</label>
                                    <field name="email_for_guests" widget="email" class="w-50" />
                                </div>
                                <div class="mt16">
                                    <label for="email_for_notifications"
                                        class=" col-2 o_light_label">Email
                                        for guests</label>
                                    <field name="email_for_notifications" widget="email"
                                        class="w-50" />
                                </div>
                                <div class="mt16">
                                    <label for="additional_email"
                                        class=" col-2 o_light_label">Email
                                        for guests</label>
                                    <field name="additional_email" widget="email" class="w-50" />
                                </div>
                            </settings>
                        </block>
                        <block title="Phone" id="phone_ms">
                            <settings title="Phone">
                                <!-- Main phone number -->
                                <div
                                    style="font-size:20px;font-weight:bold;padding-bottom:10px">
                                    Main phone number
                                </div>
                                <div class="mt16">
                                    <label for="main_phone" class="col-2 o_light_label">Phone</label>
                                    <field name="main_phone"
                                        help="Enter the phone number in international format"
                                        widget="phone" />
                                </div>
                                <div class="mt16">
                                    <label for="main_comment" class="col-2 o_light_label">Comment</label>
                                    <field name="main_comment"
                                        help="e.g.: 24 hours, free calls" />
                                </div>
                                <!-- Additional number -->
                                <div class="mt16"
                                    style="font-size:20px;font-weight:bold;padding-bottom:10px">
                                    Additional phone 1
                                </div>
                                <div class="mt16">
                                    <label for="phone_1" class="col-2 o_light_label">Phone</label>
                                    <field name="phone_1"
                                        help="Enter the phone number in international format"
                                        widget="phone" />
                                </div>
                                <div class="mt16">
                                    <label for="comment_1" class="col-2 o_light_label">Comment</label>
                                    <field name="comment_1"
                                        help="e.g.: 24 hours, free calls" />
                                </div>
                                <!-- Additional number 2 -->
                                <div class="mt16"
                                    style="font-size:20px;font-weight:bold;padding-bottom:10px">
                                    Additional phone 2
                                </div>
                                <div class="mt16">
                                    <label for="phone_2" class="col-2 o_light_label">Phone</label>
                                    <field name="phone_2"
                                        help="Enter the phone number in international format"
                                        widget="phone" />
                                </div>
                                <div class="mt16">
                                    <label for="comment_2" class="col-2 o_light_label">Comment</label>
                                    <field name="comment_2"
                                        help="e.g.: 24 hours, free calls" />
                                </div>
                                <!-- Additional number 3 -->
                                <div class="mt16"
                                    style="font-size:20px;font-weight:bold;padding-bottom:10px">
                                    Additional phone 3
                                </div>
                                <div class="mt16">
                                    <label for="phone_3" class="col-2 o_light_label">Phone</label>
                                    <field name="phone_3"
                                        help="Enter the phone number in international format"
                                        widget="phone" />
                                </div>
                                <div class="mt16">
                                    <label for="comment_3" class="col-2 o_light_label">Comment</label>
                                    <field name="comment_3"
                                        help="e.g.: 24 hours, free calls" />
                                </div>
                            </settings>
                        </block>
                        <block title="Guest confirmation settings" id="conf_settings_ms">
                            <settings string="Guest confirmation settings">
                                <header>
                                    <div
                                        class="alert alert-info" role="alert">
                                        <p
                                            class="mb-0">
                                            <i class="fa fa-info-circle"
                                                aria-hidden="true"> </i>   You can also attach a
                                            welcoming email, rules of stay or the terms for the
                                            services provided to the booking confirmation of a
                                            guest. Maximum file size — 5 MB. The supported format —
                                            PDF. </p>
                                    </div>
                                </header>
                                <field name="file_data" widget='binary'
                                    class="custom-upload"
                                    filename='file_name' />
                                <field name="file_name" invisible="1" />
                            </settings>
                        </block>
                    </app>
                </xpath>
            </field>
        </record>
        <record id="action_main_settings" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'property_settings', 'bin_size': False}</field>
        </record>
        <!-- Menu Item for Main Settings -->
        <!-- <menuitem id="menu_property_management"
            name="Property Settings"
            sequence="10" />

        <menuitem id="menu_main_settings"
            name="Main Settings"
            parent="menu_property_management"
            sequence="1" /> -->
        <!-- other -->

    </data>
</odoo>
