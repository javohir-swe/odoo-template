<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_services_type_tree" model="ir.ui.view">
            <field name="name">services.types.tree</field>
            <field name="model">services.types</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_type_form" model="ir.ui.view">
            <field name="name">services.types.form</field>
            <field name="model">services.types</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>